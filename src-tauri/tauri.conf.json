{
  "$schema": "https://raw.githubusercontent.com/nicovrc/tauri-docs/refs/heads/next/references/config-schema-2.0.0.json",
  "productName": "microtaskrr",
  "version": "0.1.0",
  "identifier": "com.microtaskrr.app",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "microtaskrr",
        "width": 480,
        "height": 360,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false,
        "center": true,
        "resizable": false,
        "skipTaskbar": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
